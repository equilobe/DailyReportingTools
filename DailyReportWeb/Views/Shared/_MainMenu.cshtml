<div id="jumbo">
    <div class="container" ng-if="!isPlugin">
        <div class="row" ng-show="!isAuth">
            <div class="col-md-10 col-sm-9"></div>
            <div class="col-md-2 col-sm-3">
                <a class="btn btn-default btn-sm" ng-href="app/signup">Sign Up</a>
                <a class="btn btn-default btn-sm pull-right" ng-href="app/signin">Sign In</a>
            </div>
        </div>
        <div class="row" ng-show="isAuth">
            <div class="col-md-11 col-sm-10">
                <ol class="breadcrumb relative">
                    <li ng-repeat="breadcrumb in breadcrumbs.get() track by breadcrumb.path" ng-class="{ active: $last }">
                        <a ng-if="!$last" ng-href="{{breadcrumb.path}}" ng-bind="breadcrumb.label" class="margin-right-xs"></a>
                        <span ng-if="$last" ng-bind="breadcrumb.label"></span>
                    </li>
                </ol>
            </div>
            <div class="col-md-1 col-sm-2">
                <button class="btn btn-default btn-sm pull-right" ng-click="signOut(this)">Sign Out</button>
            </div>
        </div>
    </div>
    <div class="container" ng-if="isPlugin">
        <div class="col-md-12 col-sm-12">
            <ol class="breadcrumb relative">
                <li ng-repeat="breadcrumb in breadcrumbs.get() track by breadcrumb.path" ng-class="{ active: $last }">
                    <a ng-if="!$last" ng-href="{{breadcrumb.path}}" ng-bind="breadcrumb.label" class="margin-right-xs"></a>
                    <span ng-if="$last" ng-bind="breadcrumb.label"></span>
                </li>
            </ol>
        </div>
    </div>
</div>