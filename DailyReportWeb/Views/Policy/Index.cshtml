@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" ng-app="policyEditorApp">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>
    </title>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/maincss")    
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/app/js/policyEditorApp.js"></script>
</head>

<body ng-controller="policyListPage">
    <div id="jumbo" class="jumbotron">
        <div class="container">
            <h1>
                Daily Report Setup
            </h1>
            <p class="help-block">
                Use this page to configure all options for the daily report.
            </p>
        </div>
    </div>

    <div class="container">
        <table class=" table">
            <tr>
                <th>
                    Project name
                </th>
                <th>
                    Report time
                </th>
                <th>
                    Options
                </th>
            </tr>
            <tr ng-repeat="policy in policyList">
                <td>
                    {{policy.ProjectName}}
                </td>
                <td style="position: relative;">
                    <input type="text" class="form-control" ng-model="policy.ReportTime" ng-pattern="/^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$/" placeholder="08:00" />
                    <span class="reportTime-notification"><b>Enter valid time</b> (23:59)</span>
                </td>
                <td>
                    <a href="~/Policy/Details/{{policy.Id}}" class="btn btn-default">Details</a>
                </td>
            </tr>
        </table>

    </div>

    
    @Html.Partial("_HowItWorks")



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
    </script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js">
    </script>

    <script type="text/javascript">
        $(window).load(function () {
            $("input").on("keyup", function () {
                var selectedInput = $(this);

                if (selectedInput.hasClass("ng-invalid")) {
                    selectedInput.parent().addClass("has-error")
                        .find('.reportTime-notification').show();
                }
                else {
                    selectedInput.parent().removeClass("has-error")
                        .find('.reportTime-notification').hide();;
                }
            });

            $(".reportTime-notification").on("click", function () {
                $(this).prev().focus();
            });
        })
    </script>
</body>
</html>