<div>
    @if (Model.Resolution != null)
    {
        <span style="font-family: Segoe UI Symbol; font-size: 10.5pt">&#10004;</span>
    }
    else if (Model.StatusCategory.name == "In Progress")
    {
        <span style="font-family: Wolfram Alpha; font-size:10.5pt">&#9658;</span>
    }
    else if (Model.Resolution == null)
    {
        <span style="font-family: Segoe UI Symbol; font-size: 10.5pt">&#10065;</span>
    }

    <a href=@Model.Link style="text-decoration: none; font-weight:bold"> @Model.Summary </a>
    <span style="color: #B8B8B8;"> &#x25cf; @Model.Key </span>
    @if (Model.Assignee == null)
    {
        <span> &#x25cf; Unassigned</span>
    }
    else if (Model.Assignee != author.Name)
    {
        <span> &#x25cf; @Model.Assignee</span>
    }
</div>                     