@{
    var openParentheses = "";
    var closedParentheses = "";
    var comma = "";
}
@if (Model != null)
 {
     if (Model.Count > 0)
     {
     <span> &#x25cf; </span>
     <span style="background-color:yellow; font-weight:bold">
         @Model.Count
         @if (Model.Count == 1)
         {
          <span> pull request </span>
         }
         else
         {
          <span> pull requests </span>
         }
         @foreach (var pullRequest in Model)
         {
             if (pullRequest == Model.First())
             {
                 openParentheses = "(";
             }
             else { openParentheses = ""; }
             if (pullRequest == Model.Last())
             {
                 closedParentheses = ")";
                 comma = "";
             }
             else
             {
                 closedParentheses = "";
                 comma = ",";
             }
          <span style="white-space:nowrap">@openParentheses<a style="text-decoration:none" href="@pullRequest.GithubPullRequest.HtmlUrl">@pullRequest.GithubPullRequest.Number</a>@comma @closedParentheses</span>
         }
     </span>
     }
 } 
