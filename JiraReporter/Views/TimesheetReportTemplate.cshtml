<div style="margin-top:15px; font-size:12px; color:#000000;">
      @if((Model.options.ToDate - Model.options.FromDate).Days <=1)
        {
           <h2 style="color:black"> @Model.Title Daily Report for @Model.Date.ToString("dddd, dd MMMM yyyy") </h2>
        }
      else
      {
        <h2 style="color:black">@Model.Title Daily Report for @Model.options.FromDate.ToString("dddd, dd MMMM yyyy") - @Model.options.ToDate.AddDays(-1).ToString("dddd, dd MMMM yyyy")</h2>
      }  
    @{
        var bold = "";
        var remainingEstimate = "";
        var colorTotal = "black";
        var color="black";
        var tasks="";
        var comma = "";
        var openParentheses = "(";
        var closedParentheses = ")";
        var indentation = "";
        var totalTimeSpent = "";
        var revision="";
        var tooltipWorked = "";
        var tooltipCommit = "";
     }
  
<div>
    @Partial("Views/summary.cshtml", Model.Summary)
</div>

    <div style="margin-top:40px; line-height:1.4em;">
        @if(Model.Authors.Count>0)
        { 
              foreach (var author in Model.Authors)
              {
                    <div style="margin-top:40px;">
                        <h1 style="color:black">@author.Name</h1>
                        @*@if(author.Issues!=null)
                        {
                           if(author.Issues.Count > 0)
                           {
                             <div style="margin-top:25px; line-height:1.4em;">
                              @Partial("Views/workedHeader.cshtml", author)
                          
                                @foreach (var issue in author.Issues)
                                {
                                        if (issue.SubTask == true)
                                        {
                                        indentation = "margin-left:25px";
                                        @Partial("Views/parentTask.cshtml", issue)
                                        }
                                        else
                                        {
                                        indentation = "";
                                        }
                                        <div style="@indentation;">
                                            <div style="margin-top:7px;">
                                                @Partial("Views/workedTask.cshtml", issue)
                                            </div>
                                        </div>                                                                                                                                                                                                     
                                }
                            </div>
                        }
                        }*@
                        @if (author.DayLogs.Count > 0)
                        {
                            foreach (var dayLog in author.DayLogs)
                            {
                                <div style="margin-top:15px; line-height:1.4em">
                                    @Partial("Views/workedHeader.cshtml", dayLog)
                                    @if (dayLog.Issues != null)
                                    {
                                        if (dayLog.Issues.Count > 0)
                                        {
                                            @*<table style="margin-left:10px;" cellpadding="0" cellspacing="0">
                                                <tbody>*@
                                            foreach (var issue in dayLog.Issues)
                                            {

                                                        @*@Partial("Views/parentTask.cshtml", issue)*@
                                                    @Partial("Views/workedTask.cshtml", issue)
                                                    
                                            }
                                            @*</tbody>
                                                </table>*@
                                        }
                                    }
                                </div>

                                if (dayLog.UnsyncedCommits.Count > 0)
                                {
                                    @Partial("Views/unrelatedCommits.cshtml", dayLog.UnsyncedCommits)
                                }
                                if (dayLog.UnsyncedPullRequests != null)
                                {
                                    if (dayLog.UnsyncedPullRequests.Count > 0)
                                    {
                                        @Partial("Views/unrelatedPullRequests.cshtml", dayLog.PullRequests)
                                    }
                                }
                            }
                        }                        
                        
                    

                        @if (author.InProgressTasks.Count > 0)
                        {
                            <div style="margin-top:20px; line-height:1.4em;">
                                <b style="color:sienna; font-size:14px;">Today &#x25cf; @author.InProgressTasks.Count </b>
                                @if(author.InProgressTasks.Count==1)
                                {
                                <b style="color: sienna; font-size:14px;"> task </b>
                                }
                                else
                                {
                                <b style="color: sienna; font-size:14px;"> tasks </b>
                                }
                                @if (author.InProgressTasksTimeLeftSeconds == 0)
                                {
                                    
                                    <b style="color:red; font-size:14px;"> &#x25cf; @author.InProgressTasksTimeLeft left</b>
                                }
                                else
                                {
                                    <b style="color:sienna; font-size:14px;"> &#x25cf; @author.InProgressTasksTimeLeft left</b>
                                }
                                @*<table style="margin-left:10px;">
                                    <tbody>*@
                                        @foreach (var task in author.InProgressTasks)
                                        {
                                            if (task.Issue.SubTask == true)
                                            {
                                                @Partial("Views/parentTask.cshtml", task.Issue)
                                                indentation = "margin-left:15px;";
                                            }
                                            else
                                            {
                                                indentation = "";
                                            }
                                            <div style="@indentation">
                                                @Partial("Views/inProgress.cshtml", task.Issue)
                                            </div>                                               
                                               
                                             @*if (task.Issue.SubtasksIssues != null)
                                                {
                                                    if (task.Issue.SubtasksIssues.Count > 0)
