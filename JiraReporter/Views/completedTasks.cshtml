@{
    var color = "";
}

<table style="padding-top:30px">
    <tr>
        <td>
            <h3 style="color:black; margin-bottom:0px; padding-bottom:5px">Completed last 7 days</h3>
        </td>
    </tr>
    <tr>
        <td>
            @foreach (var completedTasks in Model.CompletedTasks)
            {
                <i style="color:sienna">Completed @completedTasks.Key (@completedTasks.Value.Count)</i>
                <table cellpadding="1">
                    <tbody>
                        @foreach (var task in completedTasks.Value)
                        {
                            <tr>
                                <td style="vertical-align:middle">
                                    <span style="font-family: Segoe UI Symbol; font-size: 10.5pt; color:black">&#10004;</span>
                                </td>
                                <td>
                                    @if (task.Resolution != "Fixed" && task.Resolution != "Done")
                                    {
                                        <span style="color:black; padding:1.5px">@task.Resolution</span>
                                    }
                                    @if (task.DisplayStatus == true)
                                    {
                                        <span style="color:black; padding:1.5px;">@task.Status</span>
                                    }
                                    <a style="text-decoration: none; color:#15C;" href="@task.Link">@task.Summary</a>
                                    <span style="color: #B8B8B8;"> @Dot() @task.Key </span>
                                    @if (task.TimeSpentTotal > 0)
                                    {
                                        color = "black";
                                    }
                                    else
                                    {
                                        color = "red";
                                    }
                                    <span style="color:@color;"> @Dot() @task.TimeLoggedTotal worked</span>
                                    @if (task.RemainingEstimateSeconds == 0 && task.TotalRemainingSeconds > 0)
                                    {
                                        <span style="white-space:nowrap; color:red;"> @Dot() @task.TotalRemaining left from subtasks </span>
                                    }
                                    @if (task.RemainingEstimateSeconds != 0)
                                    {
                                        <span style="white-space:nowrap; color:red;"> @Dot() @task.RemainingEstimate left </span>
                                    }
                                    @if (task.Assignee != null)
                                    {
                                        <span style="color:black"> @Dot() @task.Assignee </span>
                                    }
                                    else
                                    {
                                        <span style="color:black"> @Dot() Unassigned </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </td>
    </tr>
</table>