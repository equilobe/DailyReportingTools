@{
    var guideNumber = Model.GuidelinesRate;
}
<div style="width: @Model.ChartMaxWidthString; max-width: @Model.ChartMaxWidthString; height:14px; overflow:hidden; padding-bottom:2px">
    @for (int i = 0; i < Model.GuidelinesCount; i++)
    {
        <div style="display:inline-block; height:14px; min-height:14px; float:left; margin:0; width:@Model.GuidelineWidthString">
            <table cellpadding="0" cellspacing="0">
                <tbody>
                    <tr>
                        <td style="display:block; height:7px; width:@Model.GuidelineWidthString; font-size:9px; text-align:right; color:gray">@guideNumber</td>
                        <td style="display:block; border-right:1px solid #B8B8B8; border-bottom:1px solid #B8B8B8; height: 7px; float:left; margin:0; width:@Model.GuidelineWidthString"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        guideNumber += Model.GuidelinesRate;
    }
</div>