<b style="color:Sienna; font-size:13px; "> Yesterday  &#x25cf; @Model.Issues.Count </b>
@if (Model.Issues.Count == 1)
{
    <b style="color:Sienna "> task </b>
}
else
{
    <b style="color:Sienna ">tasks</b>
}
@if (Model.TimeSpent > 0)
{
    <b style="color:Sienna "> &#x25cf; @Model.TimeLogged worked </b>
}
else
{
    <b style="color:red "> &#x25cf; no work logged </b>
}
