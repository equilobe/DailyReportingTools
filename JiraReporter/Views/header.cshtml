<table cellpadding="0" cellspacing="0">
    <tbody>
        <tr>
            <td>
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <td width="120" height="30" style="line-height:35px">
                            <img width="120" height="30" style="display:block" src="https://dailyreport.equilobe.com/content/images/logo-menu.PNG" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <h1 style="color:black; font-family:'Segoe UI', sans-serif, Arial; font-weight:normal; margin:0; padding-top:10px; padding-bottom:10px;">@Model.Title</h1>
            </td>
        </tr>
        <tr>
            <td style="color:black; font-family:'Segoe UI', sans-serif, Arial; padding:0">
                @Model.Date
            </td>
        </tr>

        @if (Model.IsIndividualDraft || Model.IsFinalDraft)
        {
            <tr>
                <td height="20">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td height="30" valign="middle" align="center" style="background-color:#FEFAC0; text-align:center; padding-top:5px; padding-bottom:5px">
                    <span style="color:#A77A23; font-family:'Segoe UI', sans-serif, Arial; font-size:12px">This is a DRAFT report. Please confirm it using the button at the end</span>
                </td>
            </tr>
        }
    </tbody>
</table>