@Spacing(10,3)

<tr>
    <td colspan="3">
        <h3 style="color:black; margin-bottom:0px; padding-bottom:5px">Unassigned </h3>
    </td>
</tr>

@foreach (var task in Model.ReportTasks.UnassignedTasksVisible)
{
    if (task.IsSubtask == false)
    {
        @Partial("Views/uncompletedTask.cshtml", task)
    }
}

@if(Model.ReportTasks.AdditionalUnassignedTasks > 0)
{
    <tr>
        <td width="15">
            &nbsp;
        </td>
        <td colspan="2">
            + <a href="@Model.ReportTasks.UnassignedTasksSearchUrl" style="text-decoration:none; color:black">@Model.ReportTasks.AdditionalUnassignedTasks more</a>
        </td>
    </tr>
}

